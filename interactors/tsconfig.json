{
  "extends": "../tsconfig.json",

  "include": ["src/**/*.ts"],

  "exclude": ["node_modules", "build"],

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",

    "strict": true,

    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",

    "outDir": "build/",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "plugins": [
      {
        "name": "@rollup/plugin-typescript"
      }
    ]
  }
}
